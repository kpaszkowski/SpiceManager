<Window x:Class="SpiceManager.SpiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiceManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Dodaj nową przyprawę" Height="171" Width="218">
    <Grid>
        <Label Margin="45,0,52,92" Content="Nazwa przyprawy" Height="40" VerticalAlignment="Bottom"/>
        <TextBox x:Name="SpiceName" Margin="10,0,10,68" Height="19" VerticalAlignment="Bottom"></TextBox>
        <!--Buttons-->
        <Button Content="Anuluj" Command="{Binding CloseWindowCommand}" Margin="135,0,26,16" RenderTransformOrigin="0.75,0.655" Height="26" VerticalAlignment="Bottom"/>

        <Button IsDefault="True" Content="Dodaj" Command="{Binding AddSpiceToBaseCommand}" Margin="25,0,135,14" Height="28" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
